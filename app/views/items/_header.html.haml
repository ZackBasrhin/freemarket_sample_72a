.header
  .header__main
    .header__main__upper-box
      = link_to image_tag('logo.png', width: '140', height: `40.55`, class: 'logo'), root_path

      .header__main__upper-box__search-box
        %input{ class: "search", placeholder: 'キーワードから探す' }
        %input{ class: "btn", type: "image", src: "/assets/icon-search 1.png" }
    .header__main__lower-box
      .header__main__lower-box__left-list
        = image_tag 'icon_category.png', height: '16', width: '16', class:"category-icon"
        .category-link
          カテゴリ
          %ul.category1
            - @parents.each do |parent|
              %li.parent__list
                = link_to parent.name
                %ul.category2
                  - parent.children.each do |child|
                    %li.child__list
                      =link_to child.name
                      %ul.category3
                        - child.children.each do |grandchild|
                          %li.grandchild__list
                            = link_to grandchild.name
        -# = image_tag 'icon_brand.png', height: '16', width: '16'
        -# = link_to 'ブランド', "#", class:"category-link"
      .right-list
        - if user_signed_in?
          - if flash[:notice]
            = flash[:notice]
          = link_to "マイページ",   t_user_show_items_path,    class: "right-list__btn"
          = link_to "ログアウト", root_path,                  class: "right-list__btn"
        - else
          = link_to 'ログイン',    new_user_session_path,      class:"right-list__btn"
          = link_to '新規会員登録', new_user_registration_path, class:"right-list__btn"
